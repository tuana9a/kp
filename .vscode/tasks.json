{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "autopep8",
            "type": "shell",
            "command": "cd ${workspaceFolder} && source .venv/bin/activate && find ./kp ./main.py -name '*.py' -exec autopep8 -v --in-place --aggressive --aggressive '{}' \\;",
            "problemMatcher": [],
        },
        {
            "label": "build",
            "type": "shell",
            "command": "cd ${workspaceFolder} && source .venv/bin/activate && pyinstaller --name kp --onefile --hidden-import proxmoxer.backends --hidden-import proxmoxer.backends.https main.py",
            "problemMatcher": [],
        }
    ]
}